<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_rounded_rectangle"
    android:backgroundTint="@color/brown_playfield_bg"
    app:layout_constraintDimensionRatio="1:1">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/backgroundContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipChildren="false"
        android:orientation="vertical"


        app:layout_constraintBottom_toTopOf="@+id/testBot"
        app:layout_constraintEnd_toStartOf="@+id/testRight"
        app:layout_constraintStart_toStartOf="@+id/testLeft"
        app:layout_constraintTop_toTopOf="@+id/testTop"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/playfieldContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipChildren="false"
        android:orientation="vertical"


        app:layout_constraintBottom_toTopOf="@+id/testBot"
        app:layout_constraintEnd_toStartOf="@+id/testRight"
        app:layout_constraintStart_toStartOf="@+id/testLeft"
        app:layout_constraintTop_toTopOf="@+id/testTop"/>




    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/testTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.10" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/testBot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.90" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/testLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.10" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/testRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.90" />

</androidx.constraintlayout.widget.ConstraintLayout>